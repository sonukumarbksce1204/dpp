import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	    Scanner input=new Scanner(System.in);
	    int q=input.nextInt();
	    for(int i=0;i<q;i++){
	        int n=input.nextInt();
	        int m=input.nextInt();
	        int x=input.nextInt();
	        System.out.println((2*n+2*m)*x);
	    }

	}
}
