import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner input=new Scanner(System.in);
		int n=input.nextInt();
		for(int i=0;i<n;i++){
		    int x=input.nextInt();
		    int y=input.nextInt();
		    int z=input.nextInt();
		    int area=x*y;
		    int cost=z/2;
		    int wall=cost/area;
		    System.out.println(wall);
		}

	}
}
