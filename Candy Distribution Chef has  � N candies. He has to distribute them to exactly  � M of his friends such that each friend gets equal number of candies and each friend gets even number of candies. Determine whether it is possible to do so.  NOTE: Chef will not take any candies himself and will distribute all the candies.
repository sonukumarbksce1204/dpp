import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner input=new Scanner(System.in);
		int n=input.nextInt();
		while(n-- >0){
		    double x=input.nextInt();
		    double y=input.nextInt();
		    double z=Math.ceil(x/y);
		   
		  //  System.out.println(z);
		    System.out.println(x%y==0&&((int)z)%2==0?"YES":"NO");
		}

	}
}
